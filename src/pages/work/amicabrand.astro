---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
---

<BaseLayout
    title="Amica Brand – A Brand That Feels Like a Friend | 42 Interactive"
    bodyClass="amicabrand-page"
    additionalStyles={["/css/amicabrand.css"]}
>
    <Header activePage="home" />

    <main class="main-content">
        <!-- ========================================
             HERO
             ======================================== -->
        <section class="amicabrand-hero section-hero fade-in" data-theme="dark">
            <div class="hero-bg-mask">
                <img
                    src="/images/work/amicabrand/image-amicabrand.png"
                    alt=""
                    class="hero-bg-image"
                />
            </div>
            <div class="hero-info">
                <div class="hero-text-box">
                    <h1 class="hero-title">A Brand That Feels Like a Friend</h1>
                </div>
                <div class="hero-credits-box">
                    <div class="credit-info">
                        <p class="credit-label">Client</p>
                        <p class="credit-value">International Towers</p>
                    </div>
                    <div class="credit-photo">
                        <p>Photo credits - International Towers</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- ========================================
             INTRO – WHAT WE'VE DONE
             ======================================== -->
        <section class="section-intro fade-in" data-theme="light">
            <div class="section-inner">
                <p class="intro-label">WHAT WE'VE DONE</p>
                <p class="intro-text">
                    We did a <span class="bold">complete brand design</span> for International
                    Towers <span class="bold">Digital Experience</span>
                    <span class="bold">that connects</span> tenants, retail partners,
                    service providers and property managers.
                </p>
            </div>
        </section>

        <!-- ========================================
             BRAND LOGO
             ======================================== -->
        <section class="amicabrand-logo" data-theme="light">
            <div class="section-inner amicabrand-logo__inner">
                <div class="amicabrand-logo__image">
                    <img
