---
import configData from "../data/config.json";

interface Props {
    title: string;
    description?: string;
    additionalStyles?: string[];
    bodyClass?: string;
}

const {
    title,
    description = "42 Interactive - Building What Others Only Imagine",
    additionalStyles = [],
    bodyClass = "",
} = Astro.props;

// Get base URL from Astro config
// BASE_URL is automatically set by Astro based on the base config
const baseUrl = (import.meta.env as any).BASE_URL || "/";

// Get Google Analytics ID from config
const gaId = (configData as any).googleAnalytics;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="stylesheet" href={`${baseUrl}css/styles.css`} />
        {
            additionalStyles.map((style) => (
                <link
                    rel="stylesheet"
                    href={
                        style.startsWith("/")
                            ? `${baseUrl}${style.slice(1)}`
                            : style
                    }
                />
            ))
        }
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&family=Inter:wght@300;400;500&family=Barlow+Condensed:wght@400&display=swap"
            rel="stylesheet"
        />
        {
            gaId && (
                <>
                    <script
                        async
                        src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}
                    />
                    <script
                        set:html={`window.dataLayer = window.dataLayer || [];
function gtag(){dataLayer.push(arguments);}
gtag('js', new Date());
gtag('config', '${gaId}');`}
                    />
                </>
            )
        }
    </head>
    <body class={bodyClass}>
        <slot />

        <!-- YouTube Lightbox -->
        <div id="youtube-lightbox" class="youtube-lightbox">
            <div class="lightbox-backdrop"></div>
            <div class="lightbox-content">
                <button class="lightbox-close">&times;</button>
                <iframe
                    id="youtube-player"
                    src=""
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            </div>
        </div>

        <!-- JavaScript -->
        <script is:inline src={`${baseUrl}js/header.js`}></script>
        <script is:inline src={`${baseUrl}js/buttons.js`}></script>
        <script is:inline src={`${baseUrl}js/animations.js`}></script>
        <script is:inline src={`${baseUrl}js/youtube.js`}></script>
        <script is:inline src={`${baseUrl}js/podcasts.js`}></script>
        <script is:inline src={`${baseUrl}js/clients.js`}></script>
        <script is:inline src={`${baseUrl}js/testimonials.js`}></script>
        <script is:inline src={`${baseUrl}js/gradient.js`}></script>
        <script is:inline src={`${baseUrl}js/main.js`}></script>
        <script is:inline src={`${baseUrl}js/stars-background.js`}></script>
    </body>
</html>
