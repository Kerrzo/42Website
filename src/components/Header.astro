---
interface Props {
    activePage?: "home" | "who-we-are" | "what-we-do";
}

const { activePage = "home" } = Astro.props;
---

<header class="main-menu header-theme-dark">
    <div class="header-container">
        <a href="/" class="logo-container">
            <img
                src="/images/logo-42interactive-h.svg"
                alt="42 Interactive"
                class="logo-42i"
            />
        </a>
        <nav class="nav-menu">
            <a
                href="/who-we-are"
                class={`nav-link ${activePage === "who-we-are" ? "active" : ""}`}
                >Who We Are</a
            >
            <a
                href="/what-we-do"
                class={`nav-link ${activePage === "what-we-do" ? "active" : ""}`}
                >What We Do</a
            >
            <button class="btn-get-touch">Get in touch</button>
            <button class="mobile-menu-toggle" aria-label="Toggle mobile menu">
                <span class="hamburger-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
                <span class="close-icon">&times;</span>
            </button>
        </nav>
    </div>
</header>

<!-- Mobile Menu -->
<div class="mobile-menu-overlay"></div>
<nav class="mobile-menu">
    <a href="/who-we-are" class="mobile-nav-link">Who We Are</a>
    <a href="/what-we-do" class="mobile-nav-link">What We Do</a>
</nav>
