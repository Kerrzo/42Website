---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Load all blog posts
const allBlogPosts = await import.meta.glob('../../../data/blog/*.mdx', { 
    eager: true,
    import: 'frontmatter'
});

// Convert to array with slug and sort by date (latest first)
const blogPosts = Object.entries(allBlogPosts).map(([path, frontmatter]: [string, any]) => {
    const fileName = path.split('/').pop()?.replace('.mdx', '') || '';
    return {
        slug: fileName,
        ...frontmatter,
        publishedDate: new Date(frontmatter.publishedAt)
    };
}).sort((a, b) => b.publishedDate.getTime() - a.publishedDate.getTime());

// Format date helper
const formatDate = (dateString: string) => {
    const date = new Date(dateString);
    return date.toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
    });
};
---

<BaseLayout 
    title="Blog | 42 Interactive"
    description="Read our latest blog posts about technology, design, and innovation"
    bodyClass="blog-listing-page"
>
    <Header activePage="who-we-are" />
    
    <main class="main-content">
        <!-- ========================================
             HERO
             ======================================== -->
        <section class="blog-hero section-hero fade-in" data-theme="dark">
            <div class="hero-bg-image-wrapper">
                <img
                    src="/images/blog/image.png"
                    alt=""
                    class="hero-bg-image"
                />
            </div>
            <div class="hero-info">
                <div class="hero-text-box">
                    <h1 class="hero-title">Our Voice</h1>
                </div>
                <div class="hero-credits-box">
                    <p class="credit-value">
                        Here's a glimpse into our world, what we do and what
                        makes us different.
                    </p>
                </div>
            </div>
        </section>

        <section class="blog-listing-section" data-theme="light">
            <div class="section-inner">
                <div class="blog-grid grid-3col">
                    {blogPosts.map((post) => (
                        <a 
                            href={`/blog/${post.slug}`} 
                            class="blog-card"
                            style="text-decoration: none; display: block;"
                        >
                            {post.image && (
                                <div class="blog-card-image-wrapper">
                                    <img
                                        src={post.image}
                                        alt={post.title}
                                        class="blog-card-image"
                                    />
                                    <div class="blog-card-overlay"></div>
                                </div>
                            )}
                            <div class="blog-card-content">
                                <h3 class="blog-card-title">{post.title}</h3>
                                {post.summary && (
                                    <p class="blog-card-summary">{post.summary}</p>
                                )}
                                <p class="blog-card-date">{formatDate(post.publishedAt)}</p>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>
    </main>

    <Footer />
</BaseLayout>

<style>
    .blog-hero {
        position: relative;
    }

    .blog-hero .hero-info {
        left: 50%;
        transform: translateX(-50%);
        align-items: flex-end;
    }

    .blog-hero .hero-text-box {
        background-color: rgba(42, 42, 252, 0.8);
        padding: 25px 60px;
        width: 620px;
        height: 266px;
        display: flex;
        align-items: center;
        box-sizing: border-box;
    }

    .blog-hero .hero-title {
        font-family: "Montserrat", sans-serif;
        font-weight: 800;
        font-size: 60px;
        line-height: 1;
        color: #ffffff;
        margin: 0;
        text-align: left;
    }

    .blog-hero .hero-credits-box {
        background-color: rgba(16, 22, 83, 0.8);
        width: 720px;
        height: 133px;
        padding: 20px 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        box-sizing: border-box;
    }

    .blog-hero .hero-credits-box .credit-value {
        font-family: "Inter", sans-serif;
        font-weight: 300;
        font-size: 16px;
        line-height: 22.4px;
        color: #ffffff;
        margin: 0;
        text-align: left;
    }

    .blog-listing-section {
        background-color: #ffffff;
        padding: 80px 0;
        min-height: 60vh;
    }

    .blog-grid {
        margin-top: 40px;
    }

    .blog-card {
        display: flex;
        flex-direction: column;
        background: transparent;
        transition: transform 0.3s ease;
        border-radius: 8px;
        overflow: hidden;
    }

    .blog-card:hover {
        /* No card movement - only image zooms */
    }

    .blog-card-image-wrapper {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* 16:9 aspect ratio */
        overflow: hidden;
        background: var(--bg-gray);
        margin-bottom: 20px;
    }

    .blog-card-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.3s ease;
    }

    .blog-card:hover .blog-card-image {
        transform: scale(1.15);
    }

    .blog-card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.2);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .blog-card:hover .blog-card-overlay {
        opacity: 1;
    }

    .blog-card-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .blog-card-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 12px;
        color: var(--text-dark, #0e1026);
        line-height: 1.4;
    }

    .blog-card-summary {
        font-size: 0.95rem;
        color: #666666;
        margin-bottom: 12px;
        line-height: 1.6;
        flex: 1;
    }

    .blog-card-date {
        font-size: 0.85rem;
        color: #999999;
        margin-top: auto;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .blog-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .blog-listing-section {
            padding: 60px 0;
        }

        .blog-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

