---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Load all blog posts
const allBlogPosts = await import.meta.glob('../../../data/blog/*.mdx', { 
    eager: true,
    import: 'frontmatter'
});

// Convert to array with slug and sort by date (latest first)
const blogPosts = Object.entries(allBlogPosts).map(([path, frontmatter]: [string, any]) => {
    const fileName = path.split('/').pop()?.replace('.mdx', '') || '';
    return {
        slug: fileName,
        ...frontmatter,
        publishedDate: new Date(frontmatter.publishedAt)
    };
}).sort((a, b) => b.publishedDate.getTime() - a.publishedDate.getTime());

// Format date helper
const formatDate = (dateString: string) => {
    const date = new Date(dateString);
    return date.toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
    });
};
---

<BaseLayout 
    title="Blog | 42 Interactive"
    description="Read our latest blog posts about technology, design, and innovation"
    bodyClass="blog-listing-page"
>
    <Header activePage="who-we-are" />
    
    <main class="main-content">
        <!-- ========================================
             HERO
             ======================================== -->
        <section class="blog-hero section-hero fade-in" data-theme="dark">
            <div class="hero-bg-image-wrapper">
                <img
                    src="/images/blog/image.png"
                    alt=""
                    class="hero-bg-image"
                />
            </div>
            <div class="hero-info">
                <div class="hero-text-box">
                    <h1 class="hero-title">Our Voice</h1>
                </div>
                <div class="hero-credits-box">
                    <p class="credit-value">
                        Here's a glimpse into our world, what we do and what
                        makes us different.
                    </p>
                </div>
            </div>
        </section>

        <section class="blog-listing-section" data-theme="light">
            <div class="section-inner">
                <!-- Category Filter -->
                <div class="blog-filter">
                    <button class="filter-btn active" data-category="all">All</button>
                    <button class="filter-btn" data-category="technology-development">Technology & Development</button>
                    <button class="filter-btn" data-category="extended-reality">Extended Reality (XR)</button>
                    <button class="filter-btn" data-category="quality-assurance">Quality Assurance</button>
                    <button class="filter-btn" data-category="digital-transformation">Digital Transformation</button>
                    <button class="filter-btn" data-category="web-design">Web Development & Design</button>
                    <button class="filter-btn" data-category="property-technology">Property Technology</button>
                </div>

                <div class="blog-grid grid-3col" id="blog-grid">
                    {blogPosts.map((post) => (
                        <a 
                            href={`/blog/${post.slug}`} 
                            class="blog-card"
                            data-category={post.category || 'all'}
                            style="text-decoration: none; display: block;"
                        >
                            {post.image && (
                                <div class="blog-card-image-wrapper">
                                    <img
                                        src={post.image}
                                        alt={post.title}
                                        class="blog-card-image"
                                    />
                                    <div class="blog-card-overlay"></div>
                                </div>
                            )}
                            <div class="blog-card-content">
                                <h3 class="blog-card-title">{post.title}</h3>
                                {post.summary && (
                                    <p class="blog-card-summary">{post.summary}</p>
                                )}
                                <p class="blog-card-date">{formatDate(post.publishedAt)}</p>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>
    </main>

    <Footer />
</BaseLayout>

<script is:inline>
    (function() {
        function initBlogFilter() {
            const filterButtons = document.querySelectorAll('.filter-btn');
            const blogCards = document.querySelectorAll('.blog-card');
            const blogGrid = document.getElementById('blog-grid');

            if (!filterButtons.length || !blogCards.length) {
                // Retry if elements aren't ready yet
                setTimeout(initBlogFilter, 100);
                return;
            }

            filterButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const category = this.getAttribute('data-category');

                    // Update active button
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');

                    // Filter blog cards
                    let visibleCount = 0;
                    blogCards.forEach(card => {
                        const cardCategory = card.getAttribute('data-category') || 'all';
                        if (category === 'all' || cardCategory === category) {
                            card.style.display = 'block';
                            card.classList.remove('hidden');
                            visibleCount++;
                        } else {
                            card.style.display = 'none';
                            card.classList.add('hidden');
                        }
                    });

                    // Update grid layout if needed
                    if (visibleCount === 0) {
                        if (blogGrid) blogGrid.style.minHeight = '400px';
                    } else {
                        if (blogGrid) blogGrid.style.minHeight = 'auto';
                    }
                });
            });
        }

        // Initialize when DOM is ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initBlogFilter);
        } else {
            initBlogFilter();
        }
    })();
</script>

<style>
    .blog-hero {
        position: relative;
    }

    .blog-hero .hero-info {
        left: 50%;
        transform: translateX(-50%);
        align-items: flex-end;
    }

    .blog-hero .hero-text-box {
        background-color: rgba(42, 42, 252, 0.8);
        padding: 25px 60px;
        width: 620px;
        height: 266px;
        display: flex;
        align-items: center;
        box-sizing: border-box;
    }

    .blog-hero .hero-title {
        font-family: "Montserrat", sans-serif;
        font-weight: 800;
        font-size: 60px;
        line-height: 1;
        color: #ffffff;
        margin: 0;
        text-align: left;
    }

    .blog-hero .hero-credits-box {
        background-color: rgba(16, 22, 83, 0.8);
        width: 720px;
        height: 133px;
        padding: 20px 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        box-sizing: border-box;
    }

    .blog-hero .hero-credits-box .credit-value {
        font-family: "Inter", sans-serif;
        font-weight: 300;
        font-size: 16px;
        line-height: 22.4px;
        color: #ffffff;
        margin: 0;
        text-align: left;
    }

    .blog-listing-section {
        background-color: #ffffff;
        padding: 80px 0;
        min-height: 60vh;
    }

    .blog-filter {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        margin-bottom: 40px;
        justify-content: center;
    }

    .filter-btn {
        padding: 10px 20px;
        background-color: #f5f5f5;
        border: 1px solid #e0e0e0;
        border-radius: 6px;
        font-family: 'Inter', sans-serif;
        font-size: 14px;
        font-weight: 500;
        color: #666;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: none;
    }

    .filter-btn:hover {
        background-color: #e8e8e8;
        color: #333;
    }

    .filter-btn.active {
        background-color: var(--accent-blue, #2a2afc);
        color: #ffffff;
        border-color: var(--accent-blue, #2a2afc);
    }

    .blog-grid {
        margin-top: 0;
    }

    .blog-card {
        opacity: 1;
        transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .blog-card.hidden {
        display: none;
    }

    .blog-card {
        display: flex;
        flex-direction: column;
        background: transparent;
        transition: transform 0.3s ease;
        border-radius: 8px;
        overflow: hidden;
    }

    .blog-card:hover {
        /* No card movement - only image zooms */
    }

    .blog-card-image-wrapper {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* 16:9 aspect ratio */
        overflow: hidden;
        background: var(--bg-gray);
        margin-bottom: 20px;
    }

    .blog-card-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.3s ease;
    }

    .blog-card:hover .blog-card-image {
        transform: scale(1.15);
    }

    .blog-card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.2);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .blog-card:hover .blog-card-overlay {
        opacity: 1;
    }

    .blog-card-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .blog-card-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 12px;
        color: var(--text-dark, #0e1026);
        line-height: 1.4;
    }

    .blog-card-summary {
        font-size: 0.95rem;
        color: #666666;
        margin-bottom: 12px;
        line-height: 1.6;
        flex: 1;
    }

    .blog-card-date {
        font-size: 0.85rem;
        color: #999999;
        margin-top: auto;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .blog-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .blog-filter {
            justify-content: flex-start;
        }

        .filter-btn {
            font-size: 13px;
            padding: 8px 16px;
        }
    }

    @media (max-width: 768px) {
        .blog-listing-section {
            padding: 60px 0;
        }

        .blog-grid {
            grid-template-columns: 1fr;
        }

        .blog-filter {
            gap: 8px;
            margin-bottom: 30px;
        }

        .filter-btn {
            font-size: 12px;
            padding: 8px 14px;
        }
    }
</style>

