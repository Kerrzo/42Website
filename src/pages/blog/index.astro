---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// Load all blog posts
const allBlogPosts = await import.meta.glob('../../../data/blog/*.mdx', { 
    eager: true,
    import: 'frontmatter'
});

// Convert to array with slug and sort by date (latest first)
const blogPosts = Object.entries(allBlogPosts).map(([path, frontmatter]: [string, any]) => {
    const fileName = path.split('/').pop()?.replace('.mdx', '') || '';
    return {
        slug: fileName,
        ...frontmatter,
        publishedDate: new Date(frontmatter.publishedAt)
    };
}).sort((a, b) => b.publishedDate.getTime() - a.publishedDate.getTime());

// Format date helper
const formatDate = (dateString: string) => {
    const date = new Date(dateString);
    return date.toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
    });
};
---

<BaseLayout 
    title="Blog | 42 Interactive"
    description="Read our latest blog posts about technology, design, and innovation"
    bodyClass="blog-listing-page"
>
    <Header activePage="who-we-are" />
    
    <main class="main-content">
        <section class="blog-listing-section" data-theme="light">
            <div class="section-inner">
                <div class="section-header">
                    <h1 class="section-title">Blog</h1>
                    <p class="section-description">Latest articles and insights from 42 Interactive</p>
                </div>

                <div class="blog-grid grid-3col">
                    {blogPosts.map((post) => (
                        <a 
                            href={`/blog/${post.slug}`} 
                            class="blog-card"
                            style="text-decoration: none; display: block;"
                        >
                            {post.image && (
                                <div class="blog-card-image-wrapper">
                                    <img
                                        src={post.image}
                                        alt={post.title}
                                        class="blog-card-image"
                                    />
                                    <div class="blog-card-overlay"></div>
                                </div>
                            )}
                            <div class="blog-card-content">
                                <h3 class="blog-card-title">{post.title}</h3>
                                {post.summary && (
                                    <p class="blog-card-summary">{post.summary}</p>
                                )}
                                <p class="blog-card-date">{formatDate(post.publishedAt)}</p>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>
    </main>

    <Footer />
</BaseLayout>

<style>
    .blog-listing-section {
        background-color: #ffffff;
        padding: 80px 0;
        min-height: 60vh;
    }

    .section-header {
        margin-bottom: 60px;
        text-align: center;
    }

    .section-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 20px;
        color: var(--text-dark, #0e1026);
    }

    .section-description {
        font-size: 1.2rem;
        color: #666666;
    }

    .blog-grid {
        margin-top: 40px;
    }

    .blog-card {
        display: flex;
        flex-direction: column;
        background: transparent;
        transition: transform 0.3s ease;
        border-radius: 8px;
        overflow: hidden;
    }

    .blog-card:hover {
        transform: translateY(-5px);
    }

    .blog-card-image-wrapper {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* 16:9 aspect ratio */
        overflow: hidden;
        background: var(--bg-gray);
        margin-bottom: 20px;
    }

    .blog-card-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .blog-card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.2);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .blog-card:hover .blog-card-overlay {
        opacity: 1;
    }

    .blog-card-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .blog-card-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 12px;
        color: var(--text-dark, #0e1026);
        line-height: 1.4;
    }

    .blog-card-summary {
        font-size: 0.95rem;
        color: #666666;
        margin-bottom: 12px;
        line-height: 1.6;
        flex: 1;
    }

    .blog-card-date {
        font-size: 0.85rem;
        color: #999999;
        margin-top: auto;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .blog-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .blog-listing-section {
            padding: 60px 0;
        }

        .section-title {
            font-size: 2rem;
        }

        .blog-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

