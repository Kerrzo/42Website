---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import OtherWork from "../../components/OtherWork.astro";
---

<BaseLayout
    title="Amica – Connecting People to workplace | 42 Interactive"
    bodyClass="amica-page"
    additionalStyles={["/css/amica.css"]}
>
    <Header activePage="home" />

    <main class="main-content">
        <!-- ========================================
             HERO
             ======================================== -->
        <section class="amica-hero section-hero fade-in" data-theme="dark">
            <div class="hero-bg-mask">
                <img
                    src="/images/work/amica/image-amica-background.png"
                    alt=""
                    class="hero-bg-image"
                />
            </div>
            <div class="hero-image">
                <img
                    src="/images/work/amica/image-amica-hero-1.png"
                    alt="Woman using phone in workplace"
                />
            </div>
            <div class="hero-info">
                <div class="hero-text-box">
                    <h1 class="hero-title">Connecting People to workplace</h1>
                </div>
                <div class="hero-credits-box">
                    <div class="credit-info">
                        <p class="credit-label">Client</p>
                        <p class="credit-value">International Towers</p>
                    </div>
                    <div class="credit-photo">
                        <p>Photo credits - International Towers</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- ========================================
             INTRO – WHAT WE'VE DONE
             ======================================== -->
        <section class="section-intro fade-in" data-theme="dark">
            <p class="intro-label">WHAT WE'VE DONE</p>
            <p class="intro-text">
                We <span class="bold">designed</span> and <span class="bold"
                    >developed</span
                > a <span class="bold">connected workplace ecosystem</span> for a
                major commercial precinct.<br />
                The platform <span class="bold">unified</span> access, mobility, services
                and community into a single digital experience.<br />
                It <span class="bold">streamlined</span> everyday interactions and
                <span class="bold">scaled</span> to tens of thousands of users.
            </p>
        </section>

        <!-- ========================================
             AWARD-WINNING PARTNERSHIP
             ======================================== -->
        <section class="amica-award" data-theme="dark">
            <div class="section-inner amica-award__inner">
                <div class="amica-award__image">
                    <img
                        src="/images/work/amica/image-tower.png"
                        alt="International Towers and Amica experience"
                    />
                </div>
                <div class="amica-award__copy">
                    <div class="section-label">OUR PARTNERSHIP</div>
                    <h3>
                        Award-winning technology partnership with International
                        Towers.
                    </h3>
                    <p>
                        Together with International Towers, we created a
                        connected experience that brings tenants, retailers and
                        visitors into a single loyalty ecosystem. A platform
                        that rewards everyday behaviours and builds a thriving
                        community.
                    </p>
                    <div class="amica-award__tags">
                        <img
                            src="/images/work/amica/image-amicaplatform.png"
                            alt="Amica platform capabilities overview"
                        />
                    </div>
                </div>
            </div>
        </section>

        <!-- ========================================
             LOYALTY EXPERIENCE
             ======================================== -->
        <section class="amica-loyalty" data-theme="dark">
            <div class="amica-loyalty__bg" aria-hidden="true"></div>
            <div class="section-inner amica-loyalty__content">
                <h2>
                    A loyalty experience that drives engagement and retention.
                </h2>
            </div>
        </section>

        <!-- ========================================
             PHONES + METRICS
             ======================================== -->
        <section class="amica-phones" data-theme="dark">
            <div class="section-inner amica-phones__inner">
                <div class="amica-phones__row">
                    <img
                        src="/images/work/amica/image-3phones.png"
                        alt="Amica Perks mobile app screens"
                    />
                </div>

                <div class="amica-metrics">
                    <img
                        src="/images/work/amica/image-perksdiagram.png"
                        alt="Amica perks metrics – users, vouchers, rewards and competition entries"
                    />
                </div>
            </div>
        </section>

        <!-- ========================================
             TECHNOLOGY THAT OPENS DOORS
             ======================================== -->
        <section class="amica-car" data-theme="dark">
            <div class="amica-car__bg" aria-hidden="true"></div>
            <div class="section-inner amica-car__content">
                <div class="amica-car__text">
                    <div class="section-label">ACCESS &amp; MOBILITY</div>
                    <h2>Technology that opens doors and even boom gates.</h2>
                </div>
                <div class="amica-car__phone">
                    <img
                        src="/images/work/amica/image-amica-booking.png"
                        alt="Parking and building access booking on Amica"
                    />
                </div>
            </div>
        </section>

        <!-- ========================================
             ACCESS PERMITS – AUTOMATION
             ======================================== -->
        <section class="amica-access fade-in" data-theme="dark">
            <div class="section-inner amica-access__inner">
                <div class="amica-access__copy">
                    <div class="amica-access__circle">
                        <img
                            src="/images/work/amica/image-amica-permit.png"
                            alt="Digital access permit dashboard"
                        />
                    </div>
                    <div class="section-label">ACCESS PERMITS</div>
                    <h2>
                        Automating 8+ years worth of working hours with digital
                        Access Permits.
                    </h2>
                    <div class="amica-access__stats">
                        <div class="stat">
                            <div class="stat__value">16,448</div>
                            <div class="stat__label">
                                Access permits raised and processed
                            </div>
                        </div>
                        <div class="stat-operator">×</div>
                        <div class="stat">
                            <div class="stat__value">
                                3<span class="stat__unit">Hrs</span>
                            </div>
                            <div class="stat__label">
                                Tenancy, property team &amp; contractors working
                                hours
                            </div>
                        </div>
                        <div class="stat-operator">=</div>
                        <div class="stat">
                            <div class="stat__value">8.16</div>
                            <div class="stat__label">Working years</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- ========================================
             ESG / STORYTELLING WALKTHROUGH
             ======================================== -->
        <section class="amica-walkthrough fade-in" data-theme="light">
            <div class="section-inner amica-walkthrough__inner">
                <div class="walkthrough-left">
                    <p class="amica-walkthrough__lead">
                        <strong>Visualising</strong> complex topics through thoughtful
                        <strong>design</strong> &amp;
                        <strong> interactive</strong> story telling.
                    </p>

                    <div class="awards">
                        <img
                            src="/images/work/amica/image-gooddesign-1.png"
                            alt="Good Design Award – Digital Design Apps and Software"
                        />
                        <img
                            src="/images/work/amica/image-gooddesign-2.png"
                            alt="Good Design Award – Digital Design Apps and Software"
                        />
                    </div>
                </div>
                <div class="walkthrough-right">
                    <img
                        src="/images/work/amica/image-amicaesg.png"
                        alt="ESG model mapping dashboard on laptop"
                    />
                </div>
            </div>
        </section>
    </main>

    <OtherWork currentSlug="connecting-people-to-workplace" />

    <Footer />
</BaseLayout>
